/* pages/pm25/pm25.wxss */
/*header css*/
page{
  background-color: #F5F5F5;
}
.header{
  width:100%;
  height: 15rem;
  color:#fff;
  background-color: rgba(0, 0, 0, 0.8);
  position: relative;
}
.backgroundImg{
  position: absolute;
  width:100%;
  height: 15rem;
  top:0;
  right: 0;
  z-index: -1;
}
.inline{
  display: inline;
}

.center{
  margin:0 auto;
}
.left{
  width:50%;
  float:left;
  overflow: hidden;
}
.right{
  width:50%;
  float:right;
  overflow:hidden;
}
/* 字体样式  */
.block{
  display: block;
}
.bigword{
  font-size:2rem;
  font-weight: bold;
}
.midword{
  font-size:1.3rem;
  font-weight: bold;
}
.smallword{
  font-size:0.8rem;
}
.text-center{
  width:100%;
  text-align: center;
}
.light{
  font-weight:100;
}


/* 各别样式  */
.pm25{
  width:100%;
  height: 7.8rem;
}
.pm25 .left .center{
   margin-top:1.5rem;
}
.pm25 .right .center{
  margin-top:2.2rem;
}
.lable{
  width:2.5rem;
  height:1rem ;
  padding:0.1rem;
  text-align: center;
  background-color:	#9400D3;
}

.aqi{
  width:100%;
  height: 8rem;
}
.aqi .left .center{
   margin-top:1.5rem;
}
.aqi .right .center{
  margin-top:2.2rem;
}

.pm25 .center{
    width:8rem;
}
.aqi .center{
    width:8rem;
}

.tag{
  width:4.5rem;
  height:1rem ;
  padding:0.1rem;
  background-color: #E57057;
  margin:0 auto;
}

.border{
  width:70%;
  margin-left:1rem;
  border-bottom: 1px solid #fff;
}


/* advise css  */
.advise{
  width:100%;
  margin-top:1.5rem;
  color:#000;
  overflow: hidden;
}

.advise .center{
  width:7rem;
  height:9rem;
  background-color: rgb(230, 230, 230);
}

.heading{
  padding-top:1.5rem;
  padding-bottom: 0.3rem;
}
.suggestion{
  padding:0.2rem;
  font-size: 0.9rem;
}


/* green css  */
.greenhat{
  width:100%;
  position: fixed;
  bottom: 0;
}
.greenhat .center{
  width: 13rem;
  height: 2rem;
  line-height: 2rem;
  margin:0 auto;
}

.logo{
  width:1rem;
  height: 2rem;
  line-height: 2rem;
  vertical-align:middle;
}
.introduction{
  height: 2rem;
  line-height: 2rem;
  font-size: 0.9rem;
  color: #03F002;
}

